
  <div class="row bg-gray">
  <div class="container text-center">
    <nav class="navbar navbar-inner" style="margin-top:40px; letter-spacing: 4px; font-size: 18px !important; ">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
        <% Category.all.each do |category|%>
          <li class="text-align text-center" style="margin-left:30px; margin-right:60px;">
            <%= link_to category.name, products_path(category: category.name), class: "link"%>
          </li>
        <% end %>
      </ul>
   </div>
  </nav>
</div>
  <hr>

 <div class="container text-center">
  <div class="row text-center">
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <div class="productlist-item">
      <%= link_to product_path(product) do %>
        <% if product.photos.present? %>
          <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      <p style="font-size:20px; color:red;">ï¿¥ <%= product.price %></p>
      <strong><%= simple_format(product.title) %></strong>

     </div>
      <br>
    </div>
  <% end %>
</div>
</div>
</div>

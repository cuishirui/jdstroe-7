<div class="row product-show-bg">
  <div class="container">
  <nav class="navbar navbar-inner" style="margin-top:40px; letter-spacing: 4px; font-size: 18px !important; ">
  <div class="container-fluid">
    <ul class="nav navbar-nav">
      <% Category.all.each do |category|%>
        <li class="text-align text-center" style="padding-left:40px; padding-right:30px;">
          <%= link_to category.name, products_path(category: category.name), class: "link"%>
        </li>
      <% end %>
    </ul>
</nav>
  <br>
  <% if @products.blank? %>
    <br>
    <h2 class="search-info-title">没有与"<%= @query_string %>"相关信息，请输入关键字搜索</h2>
  <% else %>
    <h2 class="search-info-title"> 有关"<%= @query_string %>"的产品信息 </h2>
    <div class="search-result">
     <hr>
      <div class="container product-table">
        <% @products.each do |product| %>

          <div class="col-xs-6 col-md-3">


          <div class="productlist-item">
            <%= link_to product_path(product) do %>
              <% if product.photos[0].present? %>
                <%= image_tag(product.photos[0].avatar.thumb.url) %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
            <p class="text-center" style="font-size:20px; margin-top:20px;"><%= link_to(render_highlight_content(product,@query_string),product_path(product)) %></p>
            <p class="text-center" style="color:red;">￥ <%= product.price%></p>
          </div>


          </div>
        <% end %>
      </div>
    </div>
    <div class="text-center">
      <%= will_paginate(@products, renderer: BootstrapPagination::Rails) %>
    </div>
  <% end %>
</div>
